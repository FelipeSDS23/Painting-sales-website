<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paintings Website</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <!-- Google icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/admin-login-register.css">
    <link rel="stylesheet" href="/css/management.css">
    <link rel="stylesheet" href="/css/slider.css">
    <link rel="stylesheet" href="/css/details.css">
    <link rel="stylesheet" href="/css/user-register.css">
</head>
<body>
    <!-- Início menu -->
    <span class="material-symbols-outlined open-close-btn" id="open-close-btn">menu</span> <!-- Botão do menu -->
    <header class="header" id="header">
        <section class="main-content menu">
            <h1>LOGO</h1>
            <nav>
                <ul class="menu_navigation">
                    <li><a href="/#inicio">Início</a></li>
                    <li><a href="/#galeria">Galeria</a></li>
                    <li><a href="/#contato">Contato</a></li>
                    {{#if session.adminid}}
                        <li><a href="/admin/logout">Sair</a></li>
                    {{else}}
                        {{#if session.userid}}
                            <li><a href="/user/#"><img style="width: 30px;" src="/img/icons/shopping_cart.png" alt="Sacola"></a></li>
                            <li><a href="/user/logout"><img style="width: 30px;" src="/img/icons/logout.png" alt="Sair"></a></li>
                        {{else}}
                            <li><a href="/user/login">Entrar</a></li>
                            <li><a href="/user/register">Registrar-se</a></li>
                        {{/if}}
                    {{/if}}
                </ul>
            </nav>
        </section>
    </header>
    <!-- Fim menu -->
    <main class="main-content">
        {{#if messages.message}}
            <div class="message" id="message">
                {{messages.message}}
            </div>
        {{/if}}      
        {{{body}}}
    </main>

    {{!-- Inicio contato --}}
    <section class="contato" id="contato">
        <h2>Contato</h2>
        <div class="contato-container">

            <div class="redes-sociais">
                <h3>Redes Sociais</h3>
                <div>
                    <img src="/img/icons/instagram.png" alt="Instagram">
                    <img src="/img/icons/facebook.png" alt="Facebook">
                    <img src="/img/icons/whatsapp.png" alt="Whatsapp">
                </div>
            </div>

            <div class="sobre">
                <h3>Sobre</h3>
                <a href="#">Produtos</a>
                <a href="#">Quem somos</a>
                <a href="#">Perfuntas frequentes</a>
            </div>

            <div class="contato-div">
                <h3>Contato</h3>
                <span><img src="/img/icons/whatsapp-16px.png" alt="whatsapp">(xx) xxxxx-xxxx</span>
                <span><img src="/img/icons/email.png" alt="e-mail">atendimento@quadros.com.br</span>
            </div>
            
            <div>
                <h3>Atendimento</h3>
                <span>(xx) xxxx-xxxx</span><br>
                <span>(xx) xxxx-xxxx</span><br>
                Segunda a Sexta das 8h às 18h00.<br>
            </div>
            
        </div>
    </section>
    {{!-- Fim contato --}}

    <footer>
        Desenvolvido por <a href="#">Felipe Silva</a>
    </footer>

    {{!-- Meus scripts --}}
    <script src="/js/script.js"></script>
    <script src="/js/slider.js"></script>
</body>
</html>